{
  "compilerOptions": {
    "target": "ES2020",   
    "module": "ESNext",        
    "lib": [
      "ES2020",    
      "DOM"      
    ],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
